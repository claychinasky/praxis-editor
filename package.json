{
  "name": "praxis-editor",
  "version": "0.3.0",
  "description": "A modern CMS for static site generation",
  "author": {
    "name": "Pages CMS Team"
  },
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "electron electron/main.js",
    "electron:build": "npm run build && electron-builder",
    "electron:preview": "electron .",
    "electron:start": "concurrently \"npm run dev\" \"npm run electron:dev\"",
    "create-icon": "node scripts/create-icon.js"
  },
  "dependencies": {
    "@codemirror/commands": "^6.3.3",
    "@codemirror/lang-html": "^6.4.8",
    "@codemirror/lang-javascript": "^6.2.1",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-markdown": "^6.2.4",
    "@codemirror/language": "^6.10.1",
    "@codemirror/legacy-modes": "^6.3.3",
    "@codemirror/state": "^6.4.0",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.23.1",
    "@ltd/j-toml": "^1.38.0",
    "@octokit/auth-oauth-app": "^8.1.1",
    "@octokit/oauth-app": "^7.1.3",
    "@tiptap/extension-image": "^2.2.2",
    "@tiptap/extension-link": "^2.2.2",
    "@tiptap/extension-table": "^2.2.2",
    "@tiptap/extension-table-cell": "^2.2.2",
    "@tiptap/extension-table-header": "^2.2.2",
    "@tiptap/extension-table-row": "^2.2.2",
    "@tiptap/extension-text-align": "^2.2.2",
    "@tiptap/pm": "^2.2.2",
    "@tiptap/starter-kit": "^2.2.2",
    "@tiptap/vue-3": "^2.2.2",
    "ajv": "^8.12.0",
    "ajv-errors": "^3.0.0",
    "axios": "^1.7.7",
    "codemirror": "^6.0.1",
    "csv-js": "^1.0.0",
    "front-matter": "^4.0.2",
    "insane": "^2.6.2",
    "js-base64": "^3.7.6",
    "lodash": "^4.17.21",
    "lucide-vue-next": "^0.303.0",
    "lunr": "^2.3.9",
    "marked": "^11.2.0",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2",
    "slugify": "^1.6.6",
    "transliteration": "^2.3.5",
    "turndown": "^7.1.2",
    "vue": "^3.4.17",
    "vue-router": "^4.2.4",
    "vue-toast-notification": "^3.1.2",
    "vuedraggable": "^4.1.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@vitejs/plugin-vue": "^4.5.2",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.35",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.1",
    "terser": "^5.36.0",
    "vite": "^5.1.0",
    "wrangler": "^3.89.0"
  },
  "build": {
    "appId": "com.praxiseditor.app",
    "productName": "Praxis Editor",
    "directories": {
      "output": "electron-dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraFiles": [
      ".dev.vars"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "dist/**/*",
      "electron/preload.js"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
