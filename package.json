{
  "name": "pages-cms",
  "version": "0.3.0",
  "description": "A modern CMS for static site generation",
  "author": {
    "name": "Pages CMS Team"
  },
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "wrangler pages dev -- npm run vite",
    "vite": "vite",
    "build": "cross-env NODE_ENV=production vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:prebuild": "cross-env ELECTRON=true concurrently \"npm run dev\" \"npm run build\" --kill-others --success first",
    "electron:build": "node scripts/cleanup.js && node scripts/build.js",
    "electron:start": "concurrently \"npm run dev\" \"npm run electron:dev\"",
    "create-icon": "node scripts/create-icon.js"
  },
